{
    "manifest_version": 3,
    "name": "Quick Thesaurus on Select",
    "version": "1.0.0",
    "description": "Shows synonyms in a clean tooltip when you select text. Also adds a context menu and a toolbar popup.",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://api.datamuse.com/*"
    ],
    "action": {
        "default_title": "Quick Thesaurus",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}